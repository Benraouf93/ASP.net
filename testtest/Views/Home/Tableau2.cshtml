@model IEnumerable<testtest.Models.Stagiaire>
@using testtest.Models
@{
    ViewBag.Title = "Tableau2";
}

<style>
    #sh {
        display: flex;
        justify-content: end;
        align-items: center;
    }
</style>
<h2>Table des Stagiaires</h2>

<p>
    @Html.ActionLink("Create New", "ActionStagiaire")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.num)</th>
        <th>@Html.DisplayNameFor(model => model.Nom)</th>
        <th>@Html.DisplayNameFor(model => model.Prenom)</th>
        <th>@Html.DisplayNameFor(model => model.Specialite.Spec)</th>
        <th></th>
    </tr>

@foreach (var item in ViewBag.Stagiaire) {
    <tr>
        <td>@item.num</td>
        <td>@item.Nom</td>
        <td>@item.Prenom</td>
        <td>@item.Specialite.Spec</td>

        <td id="sh">
            <a href="@Url.Action("Edit2", new { id = item.Code })" class="btn btn-primary" style="color:white">
                <i class="fas fa-pencil-alt"></i>
            </a>
            |
            <a href="@Url.Action("Delete2", new { id = item.Code })" class="btn btn-danger" style="color:white" onclick="return confirmDelete();">
                <i class="fas fa-trash-alt"></i>
            </a>
        </td>
    </tr>
}

</table>
